      COOK TIME:<%= @recipe.total_time %>
      CALORIES PER SERVING: <%= @recipe.calories_per_serving %>
      INGREDIENTS:</br>
      <%= @recipe.list_ingredients %>
      INSTRUCTIONS: </br>
      <%= @recipe.instructions %>
